<Window x:Class="ClickOrLoose.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClickOrLoose" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Top">
            <Button x:Name="btnStart"
                    Content="Start"
                    Width="100"
                    Height="30"
                    Margin="0,0,0,10"
                    Click="btnStart_Click"/>

            <TextBlock x:Name="lblReady"
                       Text="Ready!"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Spawn speed:" Margin="0,0,0,5"/>
            <Slider x:Name="sldSpeed"
                    Minimum="200"
                    Maximum="2000"
                    Value="700"
                    TickFrequency="100"
                    IsSnapToTickEnabled="True"
                    Width="180"
                    Margin="0,0,0,10"/>
            <TextBlock x:Name="lblSpeedValue"
                       Text="700 ms"
                       Margin="0,0,0,10"/>

            <TextBlock x:Name="lblScore"
                       Text="Score: 0"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <TextBlock x:Name="lblTime"
                       Text="Time: 10.0s"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <ListBox x:Name="lstLog" Height="250"/>
        </StackPanel>

        <Canvas x:Name="GameCanvas"
                Grid.Column="1"
                Background="#FFF8F8F8"
                Margin="10"
                MouseLeftButtonDown="GameCanvas_MouseLeftButtonDown"/>
    </Grid>
</Window>